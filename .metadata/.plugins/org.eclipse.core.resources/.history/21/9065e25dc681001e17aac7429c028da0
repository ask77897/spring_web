<script>
	$.ajax({
		type: 'get',
		url: '/users/read?uid=' + sessionStorage.getItem("uid"),
		success: function (data) {
			const temp = Handlebars.compile($("#temp_user").html());
			$("#div_user").html(temp(data));
		}
	})
</script>
