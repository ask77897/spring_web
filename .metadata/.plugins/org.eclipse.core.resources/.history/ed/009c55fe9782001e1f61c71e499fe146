<script>
	let page = 1;
	let size = 3;
	pid = "[[${param.pid}]]";
	//alert(pid)
	getComments();
	
	function getComments(){
		$.ajax({
			type:'get',
			url:'/comments/list.json',
			data:{page, size, pid},
			success:function(data){
				console.log(data);
			}
		})
	}
</script>