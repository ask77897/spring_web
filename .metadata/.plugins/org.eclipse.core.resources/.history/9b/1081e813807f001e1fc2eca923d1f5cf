<div class="my-5">
	<h1 class="text-center mb-5">내 정보</h1>
	<div id="div_mypage" class="row justify-content-center"></div>
</div>
<script>
	getMypage();
	function getMypage(){
		$.ajax({
			type:'get',
			url:'/users/read',
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data))
			}
		})
	}
	$("#div_mypage").on("change", "#file", function(e){
		$("#div_mypage #photo").attr("src", URL.createObjectURL(e.target.files[0]));
	})
	$("#div_mypage").on("click", "#photo", function(){
		$("#div_mypage #file").click();
	})
	$("#div_mypage").on("click", "#btn_photo", function(){
		const file = $("#file").val();
		if(file==""){
			alert("변경할 사진을 선택하세요.");
		}else{
			if(confirm("해당 사진으로 변경하시겠습니까?")){
				const formData = new FormData();
				formData.append("file", $("#file")[0].files[0]);
				formData.append("uid", sessionStorage.getItem("uid"));
				$.ajax({
					type:'post',
					url:'/users/photo',
					data:formData,
					processData:false, 
					contentType:false,
					success:function(){
						alert("이미지가 변경되었습니다.")
					}
				})
			}
		}
	})
</script>
<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="mb-5 text-center">
			<img id="photo" class="photo" src="http://via.placeholder.com/200x200" width="200">
			<input type="file" id="file" style="display:none">
			<div class="mt-2"><button id="btn_photo" class="btn btn-dark px-5">사진저장</button></div>
		</div>
		<div class="card p-3">
			<div>이름	 : {{uname}}</div><hr>
			<div>전화번호 : {{phone}}</div><hr>
			<div>주소 : {{address1}} {{address2}}</div>
			<div class="my-3 text-center">
				<a href="/users/update" class="btn btn-sm btn-dark px-5">정보수정</a>
			</div>
		</div>		
	</div>
</script>