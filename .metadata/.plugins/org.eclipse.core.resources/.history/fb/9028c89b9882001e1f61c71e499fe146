<div class="my-5">
	<h1 class="text-center mb-5">댓글 관리</h1>
	<div id="div_comments"></div>
</div>
<script id="temp_comments" type="x-handlebars-template">
	{{#each .}}
	<div class="row">
		<div class="col-2">
			<img src="/display?file={{photo}}" width="30" class="photo"/>
			<small>{{uname}}</small>
		</div>
		<div class="col">
			{{body}}
		</div>
	</div>
	<hr/>
	{{/each}}
</script>
<script>
	let page = 1;
	let size = 3;
	pid = "[[${param.pid}]]";
	//alert(pid)
	getComments();
	
	function getComments(){
		$.ajax({
			type:'get',
			url:'/comments/list.json',
			data:{page, size, pid},
			success:function(data){
				console.log(data);
				const temp = Handlebars.compile($("#temp_comments").html());
				$("#div_comments").html(temp(data));
			}
		})
	}
</script>