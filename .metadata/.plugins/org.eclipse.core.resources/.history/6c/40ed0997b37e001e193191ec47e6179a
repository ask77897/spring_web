<script>
	const pid="[[${pid}]]";
	getPost();
	//alert(pid);
	function getPost(){
		$.ajax({
			type:'get',
			url:'/posts/read.json',
			data:{pid},
			success:function(data){
				console.log(data);
			}
		})
	}
</script>
