<div class="my-5">
	<h1 class="text-center mb-5">내 정보</h1>
	<div id="div_mypage" class="row justify-content-center"></div>
</div>
<script>
	getMypage();
	function getMypage(){
		$.ajax({
			type:'get',
			url:'/users/read',
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data))
			}
		})
	}
	$("#div_mypage").on("change", "#file", function(e){
		$("#div_mypage #photo").attr("src", URL.createObjectURL(e.target.files[0]));
	})
</script>
<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="mb-5 text-center">
			<img id="photo" src="http://via.placeholder.com/200x200" width="200">
			<input type="file" id="file">
		</div>
		<div class="card p-3">
			<div>이름	 : {{uname}}</div><hr>
			<div>전화번호 : {{phone}}</div><hr>
			<div>주소 : {{address1}} {{address2}}</div>
			<div class="my-3 text-center">
				<a href="/users/update" class="btn btn-sm btn-dark px-3">정보수정</a>
			</div>
		</div>		
	</div>
</script>