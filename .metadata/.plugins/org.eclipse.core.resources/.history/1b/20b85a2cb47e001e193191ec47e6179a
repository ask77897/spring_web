<div class="my-5">
	<h1 class="text-center mb-5">게시글 정보</h1>
	<div id="div_posts"></div>
</div>
<script>
	const pid="[[${pid}]]";
	getPost();
	//alert(pid);
	function getPost(){
		$.ajax({
			type:'get',
			url:'/posts/read.json',
			data:{pid},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_posts").html());
				$("#div_posts").html(temp(data))
			}
		})
	}
</script>
<script id="temp_posts" type="x-handlebars-template">
	<div class="card">
		<div class="card-header">
			<h5>[{{pid}}] {{title}}</h5>
		</div>
		<div class="card-body">
			<p>{{body}}</p>
		</div>
		<div class="card-footer">
			<span class="me-3">작성자 : {{uname}} ({{writer}})</span>
			<span class="text-end">작성일 : {{fmtdate}}</span>
		</div>
	</div>
</script>